<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="zokscore.com.mobile.patternrecognition">

    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />
    
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service android:name=".sensors.SensorsService" />
        
        <activity android:name=".CollectActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SensorsActivity"
            android:parentActivityName=".CollectActivity" />
        <activity
            android:name=".ManagementActivity"
            android:parentActivityName=".CollectActivity" />
        <activity
            android:name=".ClassifyActivity"
            android:parentActivityName=".CollectActivity" />
        <activity
            android:name=".TrainActivity"
            android:launchMode="singleTask"
            android:parentActivityName=".CollectActivity" />
        <service
            android:name=".recognition.TrainIntentService"
            android:exported="false" />
        
        
    </application>

</manifest>